/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

:root {
	--transparent: transparent;
}

html {
	overflow: hidden;
}

html,
body,
.app {
	background: #000;
	color: white;
	font-family: 'Satoshi-Variable', sans-serif;
	font-synthesis: style;
	text-rendering: optimizeLegibility;
	overflow-x: hidden;
	overflow-y: visible;

	height: 100%;
	width: 100%;
	color-scheme: dark;
}

input,
select {
	background: inherit;
	color: inherit;
	border: inherit;
	outline: inherit;
	appearance: none;
}

img[alt] {
	text-indent: -9999px;
}

img {
	-webkit-user-drag: none;
	-khtml-user-drag: none;
	-moz-user-drag: none;
	-o-user-drag: none;
	user-drag: none;
}
